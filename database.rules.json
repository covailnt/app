{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "projects": {
      ".indexOn": [
        "owner"
      ]
    },
    "goals": {
      ".indexOn": [
        "projectId"
      ]
    },
    "resources": {
      ".indexOn": [
        "projectId"
      ]
    },
    "tasks": {
      ".indexOn": [
        "goalId"
      ]
    },
    "authorizedProjects":{
      ".indexOn":[
        "owner", "projectId"
      ]
    },
    "timers":{
      ".indexOn":[
        "projectId"
      ]
    }
  }
}
